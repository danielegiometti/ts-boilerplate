{
    "compilerOptions": {
        "types": ["reflect-metadata", "jest", "typemoq", "node"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "ES2019",
        "strict": true,
        "strictNullChecks": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "sourceMap": true,
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*"],
}

